<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/banksystem</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>

        <mapping class="com.epam.cdp.java.banksystem.dto.User"></mapping>
        <mapping class="com.epam.cdp.java.banksystem.dto.Role"></mapping>
        <mapping class="com.epam.cdp.java.banksystem.dto.Currency"></mapping>
        <mapping class="com.epam.cdp.java.banksystem.dto.Account"></mapping>
        <mapping class="com.epam.cdp.java.banksystem.dto.Conversion"></mapping>
    </session-factory>
</hibernate-configuration>